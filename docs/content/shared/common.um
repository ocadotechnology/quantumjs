# the titlebar template
@define quantum-titlebar
  @if ps
    @title {{ps}} | Quantum.js
  @ifnot ps
    @title Quantum.js

  @div .qm-header
    @div .qm-header-section
      @span .qm-header-icon:
        @a
          @attr href: /
          @img: @attr src: /resources/icon-v1.svg
      @a .qm-header-title: QUANTUM.JS
        @attr href: /
      @span .qm-header-nav
        @a: Getting Started
          @attr href: /guide/getting-started
        @a: Core
          @attr href: /core
        @a: Watch
          @attr href: /watch
        @a: Transforms
          @attr id: transforms-menu

# list of modules and descriptions
@define module-list
  @table
    @define.foreach @module as module
      @tr
        @td: @b[{{module.ps}}]
        @td: {{module.content}}


